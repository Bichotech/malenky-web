---
interface PROPS {
    Title: string;
    Text: string;
    BtnText?: string;
    BtnURL: string;
    ImgProd?: string;
}
const { Title, Text, BtnText="Ver detalles", BtnURL, ImgProd="/assets/images/productos/amigurumis/amigus.webp" } = Astro.props as PROPS;
---
<div class="item-catalogo">
    <div class="image-container" style={{ backgroundImage: `url(${ ImgProd })` }}>&nbsp;</div>
    <div class="text-container">
        <h4>{ Title }</h4>
        <p>{ Text }</p>
    </div>
    <div class="button-container">
        <a href={ BtnURL } class="btn">{ BtnText }</a>
    </div>
</div>

<style lang="scss">
    .item-catalogo {
        display: block;
        width: 360px;

        @media screen and (width > 500px) and (width < 900px){
            width: 48%;
        }

        @media screen and (width < 500px){
            width: 100%;
        }

        .image-container {
            height: 260px;
            background-size: cover;
            background-position: center center;
        }

        .text-container {
            padding: 20px;
        }

        .button-container {
            padding: 0 20px;
        }
    }
</style>