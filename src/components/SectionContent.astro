---
interface PROPS {
    preTitle?: string;
    Title: string;
    Reverse?: boolean;
    sideImage?: string;
}

const { preTitle, Title, Reverse=false, sideImage="/assets/images/temporal.jpg" } = Astro.props as PROPS;
---
<section class="malenky-section">
    <div class="row">
        <div class:list={["col-12", "col-xl-6", "malenky-image-block", { 'order-xl-last': Reverse }, { 'order-xl-first': !Reverse }]}>
            <div class="malenky-image-container" style={{ backgroundImage: `url(${sideImage})` }}></div>
        </div>
        <div class:list={["col-12", "col-xl-6", { 'order-xl-first': Reverse }, { 'order-xl-last': !Reverse }]}>
            <div class="content-section-text">
                <div class="pre-title">{ preTitle }</div>
                <hr />
                <h2>{ Title }</h2>
                <slot name="SectionHTML" />
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    .malenky-image-container {
        display: flex;
        width: 100%;
        height: 200px;
        overflow: hidden;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        background-size: cover;
        background-position: center center;

        img {
            flex-shrink: 0;
            min-width: 100%;
            min-height: 100%
        }
    }
</style>